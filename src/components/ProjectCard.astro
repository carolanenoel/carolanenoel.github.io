---
const { ProjectIllu } = Astro.props
const { Title } = Astro.props
---

<article class="skill-card flex flex-col gap-5 px-5 pb-5 rounded-lg hover:rotate-6 hover:scale-110 max-w-72">

    <img class="w-full" src={ProjectIllu} alt={Title}>
    <h3 class="card-title">{Title}</h3>

</article>


<style>
    .skill-card:hover {
        border : solid 3px var(--primary-neutral);
    }
    .card-title {
        font-family: 'Palanquin', sans-serif;
    }
</style>