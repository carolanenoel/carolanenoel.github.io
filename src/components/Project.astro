---
const { ProjectIllu } = Astro.props
const { Title } = Astro.props
const { Description } = Astro.props

---

<article class="flex flex-col items-start w-full gap-5 rounded-lg group">

    <div class="flex justify-center items-center h-60 w-full transition ease-in-out duration-300 rounded-lg group-hover:saturate-[.25] overflow-hidden">
        <img class="w-full rounded-lg" src={ProjectIllu} alt={Title}>
    </div>
    <h3 class="w-full font-cormorantInfant text-start">{Title}</h3>
    <p class="w-full text-start">{Description}</p>

</article>

