---
const { ProjectIllu } = Astro.props
const { Title } = Astro.props
const { Description } = Astro.props
// voir pour ajouter tags
---

<article class="flex flex-col gap-5 px-5 pb-5 rounded-lg">

    <img class="w-full" src={ProjectIllu} alt={Title}>
    <h3 class="card-title">{Title}</h3>
    <p>{Description}</p>

</article>

<style>
    .card-title {
        font-family: 'Palanquin', sans-serif;
    }
</style>