---
const { SkillIllu } = Astro.props
const { SkillType } = Astro.props
---

<article class="felx transition ease-in-out duration-300 skill-card flex flex-col justify-between p-5 rounded-lg bg-clrGrayLight hover:rotate-6 hover:scale-110 hover:border-2 hover:border-primaryNeutral hover:shadow hover:cursor-star h-[13rem]">

    <img class="max-w-40" src={SkillIllu} alt={SkillType}>
    <h3>{SkillType}</h3>

</article>
