---
import { ViewTransitions } from "astro:transitions";
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from "../components/Footer.astro";
const today = new Date();
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

import RoundButton from "../components/RoundButton.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<ViewTransitions />
	</head>
	<body class="font-palanquin">
		<div class="animate-bounce z-[100] fixed bottom-3 right-3"><RoundButton Link="#header" Icon="/src/assets/arrow.svg"></RoundButton></div>
		<Header id="header" />
		<main class="flex flex-col w-full pt-32">
			<slot/>
		</main>
		<Footer />
	</body>
</html>
