  }

  li {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 0.4em;
    height: 2em;
    width: 2em;
    background-color: var(--primary-neutral);
    border-radius: 4px;
    cursor: pointer;
  }
