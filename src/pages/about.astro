---
import Button from "../components/Button.astro";
import Timeline from "../components/Timeline.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Classes from "../components/Classes.astro";
---

<BaseLayout>
  <h1 class="w-full px-5 lg:px-16 font-cormorantInfant lg:text-5xl">
    À propos
  </h1>

  <section class="flex flex-col items-center gap-10 px-5 lg:px-16">
    <div class="flex flex-col items-center w-full gap-3.5">
      <img
        class="max-w-72"
        src="/moe.svg"
        alt="Portrait simplifié"
      />
      <div class="flex flex-col items-center gap-5">
        <ul class="flex gap-8">
          <li>
            <a href="https://www.behance.net/carolanenoel1"
              ><img src="/logo_behance.svg" alt="Logo Behance" /></a>
          </li>
          <li>
            <a href="https://www.linkedin.com/in/carolane-noel-062000265/"
              ><img src="/logo_linkedin.svg" alt="Logo LinkedIn" /></a>
          </li>
        </ul>
        <Button
          Link="mailto:carolane.noel@outlook.com"
          Placeholder="carolane.noel@outlook.com"
          variant="primary"
        />
      </div>
    </div>

    <section>

    </section>

    <!-- <Classes /> -->

    
  </section>
  <section>
    <h2 class="text-center">Historique</h2>
    <Timeline />
  </section>
</BaseLayout>

